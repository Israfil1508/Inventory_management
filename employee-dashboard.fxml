<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.company.inventory3.controller.EmployeeDashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #27ae60;">
            <children>
                <Label text="Employee Dashboard" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" textFill="WHITE" />
                <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Create Order">
                    <content>
                        <!-- FIXED: use absolute path -->
                        <fx:include source="/com/create-order.fxml" />
                    </content>
                </Tab>
                <Tab text="View Orders">
                    <content>
                        <!-- FIXED: use absolute path -->
                        <fx:include source="/com/view-orders.fxml" />
                    </content>
                </Tab>
                <Tab text="Customer Management">
                    <content>
                        <VBox spacing="10.0">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button onAction="#showAddCustomer" text="Add Customer" />
                                        <Button onAction="#refreshCustomers" text="Refresh" />
                                    </children>
                                </HBox>
                                <TableView fx:id="customerTable">
                                    <columns>
                                        <TableColumn fx:id="custIdColumn" text="ID" />
                                        <TableColumn fx:id="custNameColumn" text="Name" />
                                        <TableColumn fx:id="custEmailColumn" text="Email" />
                                        <TableColumn fx:id="custTotalColumn" text="Total Spent" />
                                        <TableColumn fx:id="custActionsColumn" text="Actions" />
                                    </columns>
                                </TableView>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
