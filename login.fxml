<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.inventory3.controller.LoginController">
    <center>
        <VBox alignment="CENTER" maxWidth="400.0" spacing="20.0">
            <children>
                <Label text="Inventory Management System">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label text="Login" textFill="#2c3e50">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <VBox spacing="10.0">
                    <children>
                        <Label text="Email:" />
                        <TextField fx:id="emailField" promptText="Enter your email" />
                        <Label text="Password:" />
                        <PasswordField fx:id="passwordField" promptText="Enter your password" />
                    </children>
                </VBox>
                <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="200.0" text="Login" />
                <Label fx:id="messageLabel" textFill="RED" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>